<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/confirmation"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3C3C3C" >

    <ScrollView
        android:id="@+id/confirmation_scrolling_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/confirmation_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="96.0dip" >

            <TextView
                android:id="@+id/confirmation_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.0dip"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="center"
                android:paddingLeft="32.0dip"
                android:paddingRight="32.0dip"
                android:textColor="#b6b6b6"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/confirmation_subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingLeft="32.0dip"
                android:paddingRight="32.0dip"
                android:textColor="#ffffff"
                android:textSize="20.0sp" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/confirmation_button_bar"
        android:layout_width="fill_parent"
        android:layout_height="96.0dip"
        android:layout_gravity="bottom"
        android:background="#3C3C3C" >

        <Button
            android:id="@+id/confirmation_cancel_button"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="center|left|top"
            android:layout_marginLeft="45dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/dismiss_button_selector" />

        <Button
            android:id="@+id/confirmation_confirm_button"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="center|right|top"
            android:layout_marginRight="45dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/confirm_button_selector" />
    </FrameLayout>

</FrameLayout>