<?xml version="1.0" encoding="utf-8"?>
<com.igeak.record.WearableListItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_detail_rl"
        android:layout_width="match_parent"
        android:layout_height="120px">
        <TextView
            android:id="@+id/record_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0px"
            android:includeFontPadding="false"
            android:textColor="#FFF"
            android:text="档案02"
            android:textSize="28px"/>

        <LinearLayout
            android:id="@+id/datetime_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_name"
            android:layout_marginTop="18px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/record_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="#F77D27"
                android:text="2016/06/16"
                android:textSize="24px"
            />
            <TextView
                android:id="@+id/record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21px"
                android:includeFontPadding="false"
                android:textColor="#F77D27"
                android:text=" AM 11:42"
                android:textSize="24px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/datetime_ll"
            android:layout_marginTop="18px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="38px"
                android:layout_height="27px"
                android:layout_gravity="center"
                android:background="@drawable/micro"
            />
            <TextView
                android:id="@+id/record_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:includeFontPadding="false"
                android:text="00:10"
                android:textSize="24px"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_img_rl"
        android:layout_width="match_parent"
        android:layout_height="99px"
        android:visibility="gone"
    >

        <ImageView
            android:layout_width="59px"
            android:layout_height="59px"
            android:layout_centerInParent="true"
            android:background="@drawable/smallrecord"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_info_rl_up"
        android:layout_width="match_parent"
        android:layout_height="120px"

    >
        <TextView
            android:id="@+id/record_name_small_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:text="档案 中午开会"
            android:textSize="18px"

        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_info_rl_down"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_gravity="bottom"
        android:visibility="gone"

    >
        <TextView
            android:id="@+id/record_name_small_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:text="档案 中午开会"
            android:textSize="18px"

        />
    </RelativeLayout>


</com.igeak.record.WearableListItemLayout>
