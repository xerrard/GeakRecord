<?xml version="1.0" encoding="utf-8"?>
<com.igeak.record.WearableListItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/item_detail_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25px"
                android:includeFontPadding="false"
                android:textColor="#FFF"
                android:textSize="28px"/>

            <LinearLayout
                android:id="@+id/datetime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/record_name"
                android:layout_marginTop="25px"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/record_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="#F77D27"
                    android:textSize="24px"
                />
                <TextView
                    android:id="@+id/record_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21px"
                    android:includeFontPadding="false"
                    android:textColor="#F77D27"
                    android:textSize="24px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/datetime_ll"
                android:layout_marginTop="25px"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="38px"
                    android:layout_height="27px"
                    android:layout_gravity="center"
                    android:background="@drawable/micro"
                />
                <TextView
                    android:id="@+id/record_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16px"
                    android:includeFontPadding="false"
                    android:text="00:10"
                    android:textSize="24px"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_img_rl"
            android:layout_width="match_parent"
            android:layout_height="99px"
            android:visibility="gone"
        >

            <ImageView
                android:layout_width="59px"
                android:layout_height="59px"
                android:layout_centerInParent="true"
                android:background="@drawable/smallrecord"
            />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_info_rl"
            android:layout_width="match_parent"
            android:layout_height="99px"

        >
            <TextView
                android:id="@+id/record_name_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:textSize="18px"

            />
        </RelativeLayout>


    </FrameLayout>

</com.igeak.record.WearableListItemLayout>
